@model Proyecto.Models.HomeIndexViewModel;

<div class="text-center">
        <p>Categorias</p>
        <table>
            <thead>
                <tr>
                    <th>Nombre Categoria</th>
                    @if(Model.Administrador == true)
                    {
                        <th>Acciones</th>
                    } <!-- Nueva columna para acciones -->
                </tr>
            </thead>
            <tbody>
                @for (int i = 0; i < Model.Generos.Count(); i++)
                {
                    <tr>
                        <td>@(Model.Generos[i].genero)</td>
                        <td>
                            <td><img src="@("/images/" + (Model.Generos[i].RutaFoto ?? "DefaultGenero.png"))" asp-append-version /></td>
                        </td>
                        <td>
                            <a asp-controller="Home" asp-action="LibrosGeneros" asp-route-id="@Model.Generos[i].IdGenero" class="btn btn-primary">Detalle</a>
                            @if (Model.Administrador) // Verifica si es administrador
                            {
                                <a asp-controller="Home" asp-action="ModificarGenero" asp-route-id="@Model.Generos[i].IdGenero" class="btn btn-primary">Modificar</a>
                                <a asp-controller="Home" asp-action="EliminarGenero" asp-route-id="@Model.Generos[i].IdGenero" class="btn btn-danger" onclick="return confirm('¿Estás seguro de que deseas eliminar este género?');">Eliminar</a>
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>

