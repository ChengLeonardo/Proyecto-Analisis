@model Proyecto.Models.LoginViewModel
@{
    ViewData["Title"] = "Login";
}
@section Styles {
    <link rel="stylesheet" href="~/css/StyleLogin.css">
    <link href='https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css' rel='stylesheet'>
}

<body>
    <video autoplay muted loop id="myVideo">
        <source src="~/videos/FondosMoviles/Login.mp4" type="video/mp4">
    </video>
    
    <!--Login y SingUp-->
    <div class="wrapper">
        <!--Login-->
        <div class="form-box Login">
            <h1> Inicia Sesión </h1>
            <form asp-action="Login" asp-controller="Home" method="post">
                @Html.ValidationSummary(true)
                <div class="input-box">
                    <span class="icon"><ion-icon name="person"></ion-icon></span>
                    <input asp-for="Usuario" type="text" required>
                    <label> Usuario </label>
                </div>
                <div class="input-box">
                    <span class="icon toggle-password">
                        <ion-icon name="lock-closed"></ion-icon>
                    </span>
                    <input asp-for="Pass" type="password" class="password" required>
                    <label> Contraseña </label>
                </div>
                <button type="submit" class="btn"> Login </button>
                <div class="login-register">
                    <p>No tenes una Cuenta?<a href="#" class="register-link">Registrate</a></p>
                </div>
            </form>
        </div>

        <!--SingUp-->   
        <div class="form-box SingUp">
            <h1> Registrate </h1>
            <form asp-action="Register" asp-controller="Home" method="post">
                <div class="input-box">
                    <span class="icon"><ion-icon name="person"></ion-icon></span>
                    <input type="text" name="Username" required>
                    <label> Usuario </label>
                </div>
                <div class="input-box">
                    <span class="icon toggle-password">
                        <ion-icon name="lock-closed"></ion-icon>
                    </span>
                    <input type="password" name="Password" class="password" required>
                    <label> Contraseña </label>
                </div>
                <div class="input-box">
                    <span class="icon toggle-password">
                        <ion-icon name="lock-closed"></ion-icon>
                    </span>
                    <input type="password" name="ConfirmPassword" class="password" required>
                    <label> Verificar </label>
                </div>
                <button type="submit" class="btn"> SingUp </button>
                <div class="login-register">
                    <p> Ya tienes una Cuenta? <a href="#" class="login-link">Inicia Sesion</a></p>
                </div>
            </form>
        </div>
    </div>

    <script src="~/js/ScriptLogin.js"></script>
    <!--Iconos de la Pagina-->
    <script type="module" src="https://unpkg.com/ionicons@7.1.0/dist/ionicons/ionicons.esm.js"></script>
    <script nomodule src="https://unpkg.com/ionicons@7.1.0/dist/ionicons/ionicons.js"></script>
</body>
